# Discord Bot 환경변수 템플릿
# 실제 .env 파일 생성 시 이 파일을 복사하여 실제 값으로 변경하세요.
# .env 파일은 절대로 버전 관리에 포함하지 마세요!

# =============================================================================
# Discord Bot 토큰 (필수)
# =============================================================================
# Discord Developer Portal에서 봇 토큰을 생성하여 입력
DISCORD_TOKEN=your_disocrd_bot_token

# =============================================================================
# API 설정
# =============================================================================
# 마인크래프트 API 베이스 URL
MC_API_BASE=https://api.planetearth.kr

# =============================================================================
# Discord 서버 설정 (필수)
# =============================================================================
# Discord 서버(길드) ID
GUILD_ID=서버ID
# 국가 이름 설정
BASE_NATION=국가_이름

# 인증 성공 시 부여할 역할 ID
SUCCESS_ROLE_ID=국민_역할ID
SUCCESS_ROLE_ID_OUT=외국인_역할ID

# =============================================================================
# 채널 설정 (필수)
# =============================================================================
# 로그 채널 ID
LOG_CHANNEL_ID=로그체널ID_1

# 인증 성공 메시지 채널 ID
SUCCESS_CHANNEL_ID=로그체널ID_2

# 인증 실패 메시지 채널 ID
FAILURE_CHANNEL_ID=로그체널ID_3

# 환영 메시지 채널 ID (선택사항)
WELCOME_CHANNEL_ID=로그체널ID_4

# =============================================================================
# 자동 실행 설정 (선택사항)
# =============================================================================
# 자동으로 대기열에 추가할 역할 ID (쉼표로 구분)
# /자동실행 역할id: 으로 설정가능 (txt 파일 생성)
AUTO_ROLE_IDS=역할ID

# 자동 실행 요일
# (월요일 : 0 / 화요일 : 1 / 수요일 : 2 / 목요일 : 3 / 금요일 : 4 / 토요일 : 5 / 일요일 : 6 )
AUTO_EXECUTION_DAY=6

# 자동 실행 시간 (24시간 형식)
AUTO_EXECUTION_HOUR=00
AUTO_EXECUTION_MINUTE=20

# 마을 역할 관련 설정
ENABLE_TOWN_ROLES=true
TOWN_ROLE_MAPPING_FILE=town_role_mapping.json

# =============================================================================
# 추가 설정
# =============================================================================
# 새 멤버 자동 추가 여부 (true/false) 기본 : true
AUTO_ADD_NEW_MEMBERS=true

# 인증 실패한 국가원 역할 빼기 (true/false) 기본 : false
REMOVE_ROLE_IF_WRONG_NATION=false

# 콜사인 관련 설정
ENABLE_CALLSIGNS=true
CALLSIGN_FILE=callsigns.json


